@inherits LayoutComponentBase
<RadzenComponents />

<RadzenLayout style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body';">
    
    <RadzenHeader>
        <div style="display: flex; justify-content: space-between; align-items: center; width: 100%;">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
                <RadzenSidebarToggle Click="@SidebarToggleClick" />
            </RadzenStack>
        
            <RadzenButton Visible="AutenticacaoServico.UsuarioEstaLogado" Icon="logout" Text="Sair" Style="margin-right: 10px;" Click="@Logout" />
        </div>
    </RadzenHeader>
    
    <RadzenBody Expanded="@_sidebarExpandido">
        <RadzenRow class="rz-mx-auto rz-px-2 rz-pt-0 rz-pb-2 rz-pb-lg-6" Style="max-width: 80vw; width: 100%;">
            <RadzenColumn Size="12">
                @Body
            </RadzenColumn>
        </RadzenRow>
    </RadzenBody>

    <RadzenSidebar Expanded="@_sidebarExpandido" style="z-index: 2">
        <RadzenStack AlignItems="AlignItems.Center" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding); border-bottom: var(--rz-panel-menu-item-border);">
            <RadzenImage Path="images/logo.png" style="width: 300; height: 168px;"></RadzenImage>
            <RadzenText Text="Controle de Atividades" TextStyle="TextStyle.Subtitle1" class="rz-mb-0" style="color: var(--rz-sidebar-color);"/>
            <RadzenText Text="@Util.Geral.RecuperarVersao()" TextStyle="TextStyle.Caption" style="color: var(--rz-text-disabled-color);" TagName="TagName.P" TextAlign="TextAlign.Center"/>
        </RadzenStack>
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Path=""/>
            <RadzenPanelMenuItem Text="Atividades" Path="/atividade-consulta-todas"/>
        </RadzenPanelMenu>
        <RadzenFieldset Text="Área de transferência">
            <RadzenTextArea Rows="13" class="w-100"/>
        </RadzenFieldset>
    </RadzenSidebar>
</RadzenLayout>