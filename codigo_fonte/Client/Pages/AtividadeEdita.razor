@page "/atividade-edita/{CodigoAtividade}"

@if (carregando)
{
    <p><em>Carregando...</em></p>
}
else
{
    <RadzenTemplateForm Data="@novaAtividade" Submit="@(async (AtividadeDto args) => await Enviar(args))">
        <RadzenRow Gap="2rem" Class="rz-p-0 rz-p-lg-4">
            <RadzenColumn Size="12" SizeMD="12">
                <RadzenStack>
                    <RadzenFieldset Text="Incluir atividade">
                        <RadzenStack Gap="1rem">

                            <RadzenRow AlignItems="AlignItems.Center">
                                <RadzenColumn Size="12" SizeMD="3">
                                    <RadzenLabel Text="Tarefa Redmine:" />
                                </RadzenColumn>
                                <RadzenColumn Size="12" SizeMD="9">
                                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Wrap="FlexWrap.Wrap" Gap="0.5rem">
                                        <RadzenNumeric @bind-Value=@novaAtividade.NumeroRedmine
                                                       ShowUpDown="false"
                                                       Style="width: 8rem;"
                                                       TValue="int?" />
                                        <RadzenButton ButtonStyle="ButtonStyle.Info"
                                                      Click="@(() => AbrirRedmine(novaAtividade.NumeroRedmine))"
                                                      Icon="language"
                                                      Text="Abrir tarefa">
                                        </RadzenButton>
                                    </RadzenStack>
                                </RadzenColumn>
                            </RadzenRow>

                            <RadzenRow AlignItems="AlignItems.Center">
                                <RadzenColumn Size="12" SizeMD="3">
                                    <RadzenLabel Text="Sistema:" />
                                    <RadzenRequiredValidator Component="Sistema"
                                                             Popup=true Style="position: absolute"
                                                             Text="Sistema é obrigatório" />
                                </RadzenColumn>
                                <RadzenColumn Size="12" SizeMD="3">
                                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Wrap="FlexWrap.Wrap" Gap="0.5rem">
                                        <RadzenTextBox @bind-Value=@novaAtividade.Sistema
                                                       Name="Sistema"
                                                       Style="width: 100%;" />
                                    </RadzenStack>
                                </RadzenColumn>
                            </RadzenRow>

                            <RadzenRow AlignItems="AlignItems.Center">
                                <RadzenColumn Size="12" SizeMD="3">
                                    <RadzenLabel Text="Descrição:" />
                                    <RadzenRequiredValidator Component="Descricao"
                                                             Popup=true Style="position: absolute"
                                                             Text="Descrição é obrigatória" />
                                </RadzenColumn>
                                <RadzenColumn Size="12" SizeMD="9">
                                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Wrap="FlexWrap.Wrap" Gap="0.5rem">
                                        <RadzenTextBox @bind-Value=@novaAtividade.Descricao
                                                       Name="Descricao"
                                                       Style="width: 100%;" />
                                    </RadzenStack>
                                </RadzenColumn>
                            </RadzenRow>

                            <RadzenRow AlignItems="AlignItems.Center">
                                <RadzenColumn Size="6" SizeMD="6">
                                    <RadzenLabel Text="Analista:" />
                                    <RadzenDropDown AllowClear="true"
                                                    Data="@analistasDto"
                                                    Placeholder="Selecione"
                                                    Style="width: 100%;"
                                                    TextProperty="Nome"
                                                    TValue="AnalistaDto?"
                                                    Value="@analistaSelecionado"
                                                    ValueChanged="OnAnalistaChanged">
                                    </RadzenDropDown>
                                </RadzenColumn>
                                <RadzenColumn Size="6" SizeMD="6">
                                    <RadzenLabel Text="Líder:" />
                                    <RadzenDropDown AllowClear="true"
                                                    Data="@lideresDto"
                                                    Placeholder="Selecione"
                                                    Style="width: 100%;"
                                                    TextProperty="Nome"
                                                    TValue="LiderDto?"
                                                    Value="@liderSelecionado"
                                                    ValueChanged="OnLiderChanged">
                                    </RadzenDropDown>
                                </RadzenColumn>
                            </RadzenRow>

                            <RadzenStack Gap="1rem">
                                <RadzenTabs SelectedIndex="0">
                                    <Tabs>
                                        <RadzenTabsItem Text="Observação">
                                            <RadzenStack>
                                                <RadzenRow AlignItems="AlignItems.Center">
                                                    <RadzenTextArea @bind-Value=@observacao Rows="5" class="w-100" />
                                                </RadzenRow>
                                            </RadzenStack>
                                        </RadzenTabsItem>
                                    </Tabs>
                                </RadzenTabs>
                            </RadzenStack>
                        </RadzenStack>
                    </RadzenFieldset>

                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
        <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center" Gap="1rem" Class="rz-mt-8 rz-mb-4">
            <RadzenButton ButtonType="ButtonType.Submit" Icon="save" Text="Salvar" />
            <RadzenButton ButtonStyle="ButtonStyle.Light" Click="@Cancelar" Icon="cancel" Text="Cancelar" Variant="Variant.Flat" />
        </RadzenStack>
    </RadzenTemplateForm>
}