@page "/login"

<RadzenCard class="rz-my-12 rz-mx-auto rz-p-4 rz-p-md-12" style="max-width: 600px;">
    <RadzenTemplateForm Data=@("LoginWithDefaultValues")>
        <RadzenLogin 
            AllowRegister="false" 
            AllowRememberMe="false" 
            AllowResetPassword="false" 
            Login=@(args => Logar(args, "Logar")) 
            LoginText="Entrar" 
            PasswordRequired="Senha é necessária" 
            PasswordText="Senha:" 
            RememberMe="true" 
            UserRequired="Usuário é necessário" 
            
            UserText="Usuário:" />
    </RadzenTemplateForm>
</RadzenCard>